<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SatelliteLibrary"
    >

  <Style TargetType="{x:Type local:CustomControl2}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:CustomControl2}">
          <Grid x:Name="LayoutRoot" Background="#FF808080">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Path=LabelCustomControl, Source={StaticResource SatelliteResources}}" x:Name="labelCustomControl"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>